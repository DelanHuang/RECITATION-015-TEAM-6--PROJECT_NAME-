<%- include ('../partials/header') %> 
<%- include ('../partials/navbar') %>

<div id="notifications_header">
    <h1 style="text-align: center;">
        Price Notifications
    </h1>
</div>

<br>

<div id="notifications_body">

    <div class="row" style="width: 90%; margin-left: auto; margin-right: auto;">
        
        <div class="col-sm" id="fair_price_body" style="padding-top : 30px; padding-bottom: 30px; background-color: #FFF5EE;">
            
            <div class="card card-fill text-center">
            
                <div class="card-body" style="background-color: #FFFFFF; width: auto;">
                    <h5 class="card-title">Items That Meet Your Price</h5>
                    <p class="card-text">If an item meets the price you listed as fair, it will be displayed here.</p>
                    
                    <table id="price_met_table" class="table table-striped" style="width: 100%; margin-left: auto; margin-right: auto;">
                        <tr style="background-color: #fff3ee !important;">
                            <th style="width: 15%;">Image</th>
                            <th style="width: 35%;">Item Name</th>
                            <th style="width: 20%;">Current Price</th>
                            <th style="width: 20%;">Your Price</th>
                            <th style="width: 10%;">Buy Now</th>
                        </tr>
                        
                        <% watchlistMeet.forEach(item => { %>
                            <tr style="background-color: white;">
                                <td><img src="<%= item.itemimage %>" alt="<%= item.itemname %>" style="width: 100px; height: 100px;"></td>
                                <td><%= item.itemname %></td>
       
                                <td><span class="badge badge-soft-danger me-2"> $<%= item.itemprice %></span></td>
              
                                <td><span class="badge badge-soft-success me-2"> $<%= item.watchprice %></span></td>
                                <td>
                                    <a href="<%= item.itemurl %>" class="btn btn-primary btn-md" target="_blank" style="background-color: #93c47d; border-color: #93c47d;" >Buy</a>
                                </td>
                            </tr>
                        
                        <% }); %>
                    </table>
                
                </div>
            
            </div>
        
        </div>
        
        <div class="col-sm" id="lowest_price_body" style="padding-top : 30px; padding-bottom: 30px;background-color: #FFF5EE;">
            
            <div class="card card-fill text-center">
            
                <div class="card-body" style="background-color: #FFFFFF; width: auto;">
                    <h5 class="card-title">Items At An All Time Low Price</h5>
                    <p class="card-text">These items are at the lowest point we have recorded. This might be a great deal!</p>
            
                    <table id="low_price_table" class="table table-striped" style="width: 100%; margin-left: auto; margin-right: auto;">
                        <tr style="background-color: #fff3ee !important;">
                            <th style="width: 15%;">Image</th>
                            <th style="width: 35%;">Item Name</th>
                            <th style="width: 20%;">Current Low Price</th>
                            <th style="width: 20%;">Initial Price</th>
                            <th style="width: 10%;">Buy Now</th>
                        </tr>
            
                        <% watchlistLow.forEach(item => { %>
                            <tr style="background-color: white;">
                                <td><img src="<%= item.itemimage %>" alt="<%= item.itemname %>" style="width: 100px; height: 100px;"></td>
                                <td><%= item.itemname %></td>
                                <td><span class="badge badge-soft-danger me-2"> $<%= item.itemprice %></span></td>
                                <td><span class="badge badge-soft-success me-2"> $<%= item.initialprice %></span></td>
                                <td>
                                    <a href="<%= item.itemurl %>" class="btn btn-primary btn-md" target="_blank" style="background-color: #93c47d; border-color: #93c47d;  ">Buy</a>
                                </td>
                            </tr>
                        <% }); %>
            
                    </table>
            
                </div>
            
            </div>
        
        </div>
    </div>
</div>


<style>

th 
{
    font-family: 'Calibri';
}

tr 
{
    background-color: white;
}

td
{
    max-height: 100px;
}

h1 
{
    font-family: 'Calibri';
}

h5 
{
    font-family: 'Calibri';
    font-weight: 600;
}

p 
{
    font-family: 'Calibri';
}

.badge-soft-success {
    background-color: rgba(75,191,115,.175);
    color: color-yiq(rgba(75,191,115,.175));
    color: #4bbf73;
}
.badge-soft-danger {
    background-color: rgba(217,83,79,.175);
    color: color-yiq(rgba(217,83,79,.175));
    color: #d9534f;
}


</style>


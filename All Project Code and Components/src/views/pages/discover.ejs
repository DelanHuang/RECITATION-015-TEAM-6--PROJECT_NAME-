<%- include ('../partials/header') %> 
<%- include ('../partials/navbar') %>
  <div class="container" style="background-color: #f7caca">
    <form id="search-form" action="/discover" method="GET">
      <input type="text" id="search-input" name="q" placeholder="Search for items">
      <button type="submit">Search</button>
    </form>
    <div class="row">
      <% items.forEach(item => { %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= item.image %>" alt="Card image cap" style="max-width: 100%;">
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">Price: $<%= item.price %></p>
              <a href="<%= item.url %>" class="btn btn-primary" target="_blank">Buy Now</a>
              <form action="/watchlist" method="POST">
                <input type="hidden" name="productId" value="<%= item.id %>">
                <input type="hidden" name="itemImage" value="<%= item.image %>">
                <input type="hidden" name="itemName" value="<%= item.name %>">
                <input type="hidden" name="itemPrice" value="<%= item.price %>">
                <input type="hidden" name="itemUrl" value="<%= item.url %>">
                <button type="submit" class="btn btn-secondary">Add to Watchlist</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>  
  <style>
  /* Background color */
  body {
    background-color: #f2f2f2;
  }
  
  /* Button color schemes */
  .btn-primary {
    background-color: #3498db;
    border-color: #3498db;
  }
  
  .btn-primary:hover {
    background-color: #2980b9;
    border-color: #2980b9;
  }
  
  .btn-secondary {
    background-color: #e67e22;
    border-color: #e67e22;
  }
  
  .btn-secondary:hover {
    background-color: #d35400;
    border-color: #d35400;
  }
  
  /* Search form */
  #search-form {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 50px;
  }
  
  #search-input {
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    margin-right: 10px;
    font-size: 16px;
    background-color: #fff;
  }
  
  #search-form button {
    border: none;
    border-radius: 5px;
    padding: 10px 15px;
    font-size: 16px;
    background-color: #3498db;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }
  
  #search-form button:hover {
    background-color: #2980b9;
  }
  
  /* Cards */
  .card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease-in-out;
  }
  
  .card:hover {
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    transform: translateY(-5px);
  }
  
  .card-title {
    font-size: 20px;
    font-weight: bold;
  }
  
  .card-text {
    font-size: 16px;
    margin-bottom: 10px;
  }
  
  /* Container */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 50px 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }
  
  @media only screen and (max-width: 767px) {
    .container {
      padding: 30px 10px;
    }
  }
  
  /* Navbar */
  .navbar {
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }
  
  .nav-link {
    color: #333;
    transition: all 0.2s ease-in-out;
  }
  
  .nav-link:hover {
    color: #3498db;
  }
  
  .active {
    color: #3498db;
  }
</style>
  
  
  


<%- include ('../partials/footer') %>
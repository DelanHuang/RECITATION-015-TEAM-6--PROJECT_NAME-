<%- include ('../partials/header') %> 
<%- include ('../partials/navbar') %>
<%- include ('../partials/message') %>
<main>
  
  <br>
  
  <form id="search-form" action="/discover" method="GET">
    <input type="text" id="search-input" name="q" placeholder="Search for items">
    <button type="submit" style="background-color: 
    #e6a055;">
      Search
    </button>
  </form>
  
  <div class="container" style="padding: 50px; background-color: seashell; width: 80%" id="info_results_container">
    
    <div class="row" id="info_results_grid">
      
      <div class="col-12 col-xl-4" id="info_cell">
        <!-- Search Container -->
        <div class = "container rounded" style="border:2px solid #ccc4b3; border-radius: 30px; padding:30px" id="info_block">
          <div class="card card-fill" id="info_card">
            <div class="card-header" id="info_card_header">
              <!-- Title -->
              <h4 class="card-header-title" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:gray">
                Current Item
              </h4>
            </div>
            <div class="card-body" id="info_card_body">
              
              <!-- List group -->
              <div class="list-group list-group-flush my-n3">
                <div class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col ms-n2">
                      
                      <!-- Title -->
                      <h4 class="mb-1">
                        <div class="text-gray-500 flex-grow-1 me-4">
                          Product Name
                        </div>
                      
                        <div class="fw-bolder text-gray-700 text-xxl-end">
                          <%= searchTerm %>
                        </div>
                      
                      </h4>
                    
                    </div>
                  </div> 
                </div>
                
                <div class="list-group-item">
                  <div class="row align-items-center">
                    <div class="col ms-n2">
                  
                      <!-- Title -->
                      <h4 class="mb-1">
                        <div class="text-gray-500 flex-grow-1 me-4">
                          Current User
                        </div>
                        <div class="fw-bolder text-gray-700 text-xxl-end">
                          <%= username %>
                        </div>
                      </h4>                
                  
                    </div>        
                  </div> <!-- / .row -->
                </div>
              </div>
            
            </div> <!-- / .card-body -->
          
          </div> <!-- / .card -->
        </div> <!-- /#info_block -->
      
      </div> <!-- /#info_cell -->
      
      <div class="col-12 col-xl-8" id="results_cell">   
      
        <div class = "container rounded" style="border:2px solid #ccc4b3; border-radius: 30px; padding:30px" id="results_block">
          
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="all_results_cells">

            <% items.forEach(item => { %>
              
              <div class="col-md-4">  <%# Grid cell the card is stored in %>
                
                <div class="card mb-4 box-shadow"> <%# Individual Results Card %>
                  <img class="card-img-top" src="<%= item.image %>" alt="Thumbnail not found on Ebay" style="max-width: 100%;">
                  
                  <div class="card-body">
                    
                    <div class="card-header">
                      <%= item.name %>
                    </div>
                      
                    <div class="d-flex fw-semibold align-items-center">
                      <!--begin::Label-->
                      <div class="text-gray-500 flex-grow-1 me-4">
                        Price
                      </div>
                      <!--end::Label-->
                      <div class="fw-bolder text-gray-700 text-xxl-end">
                        $<%= item.price %>
                      </div>
                    </div>
                    
                    <a href="<%= item.url %>" class="btn btn-primary" target="_blank">Buy Now</a>
                    
                    <form action="/watchlist" method="POST">
                      <input type="hidden" name="productId" value="<%= item.id %>">
                      <input type="hidden" name="itemImage" value="<%= item.image %>">
                      <input type="hidden" name="itemName" value="<%= item.name %>">
                      <input type="hidden" name="itemPrice" value="<%= item.price %>">
                      <div class = "mb-3">
                        <input type="hidden" name="itemUrl" value="<%= item.url %>">
                      </div>
                      <button type="submit" class="btn btn-secondary">Add to Watchlist</button> 
                    </form>
                  
                  </div>

                </div>  <%# / Individual Results Card %>
              
              </div>  <%# / Grid cell the card is stored in %>
            
            <% }); %>
          </div> <!-- /#all_results_cells -->
        
        </div> <!-- /#results_block -->
      
      </div> <!-- /#results_cell -->
    
    </div> <!-- /#info_results_grid -->
  
  </div> <!-- /#info_results_containers-->

</main>


<style>
/* Center the search form */
#search-form {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50px;
}
/* Style the search input */
#search-input {
  border: none;
  border-radius: 5px;
  padding: 10px 15px;
  margin-right: 10px;
  font-size: 16px;
  background-color: #f4f4f4;
}
/* Style the search button */
#search-form button {
  border: none;
  border-radius: 5px;
  padding: 10px 15px;
  font-size: 16px;
  background-color: #e6a055;
  color: #fff;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}
/* Hover effect for search button */
#search-form button:hover {
  background-color:#e6a055;
}
/* Style the cards */
.card {
  border: none;
  border-radius: 10px;
  transition: all 0.2s ease-in-out;
}
/* Hover effect for cards */
/* Style the card titles */
.card-title {
  font-size: 20px;
  font-weight: bold;
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}
/* Style the card text */
.card-text {
  font-size: 16px;
  margin-bottom: 10px;
}
/* Style the Buy Now button */
.btn-primary {
  background-color:#e6a055;
  border-color: #e6a055;
}
/* Hover effect for Buy Now button */
.btn-primary:hover {
  background-color: #e6a055;
  border-color: #e6a055;
}
</style>
  
  


<%- include ('../partials/footer') %>

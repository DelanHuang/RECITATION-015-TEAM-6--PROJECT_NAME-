<%- include ('../partials/header') %> 
<%- include ('../partials/navbar') %>

<main class="form-signin w-100 m-auto">
  <form id="form_login" class="mt-5" action="/login" method="POST">
    <img
      id="login_logo"
      class="mb-5"
      src="../../resources/img/Casa Catalog Logo.png"
      alt=""
      width="100"
      height="100"
    />

    <h1 class="h3 mb-3 fw-normal"></h1>

    <div class="form-floating">
      <input
        type="username"
        class="form-control"
        id="login_username"
        name = "input_username"
        placeholder="username"
      />
      <label for="IDusername">Username</label>
    </div>

    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        id="login_password"
        name="input_password"
        placeholder="Password"
      />
      <label for="IDpassword">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">
      Log in
    </button>
  </form>
</main>

